{
  "name": "b-straws-repo-helper",
  "displayName": "B Repo Helper",
  "description": "Extension that makes repo convenient",
  "icon": "assets/icon-128.png",
  "license": "Apache-2.0",
  "main": "./out/extension.js",
  "preview": true,
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Purusah/b-straws-repo-helper.git"
  },
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "publisher": "purusah",
  "version": "0.6.0",
  "activationEvents": [
    "onCommand:bRepoHelper.runTests",
    "onFileSystem:file"
  ],
  "contributes": {
    "commands": [
      {
        "command": "bRepoHelper.runTests",
        "title": "B Repo: Run Tests"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "bRepoHelper.runTests",
          "group": "10_repo@1",
          "when": "resource =~ /^.*\\/(comp|ecomp|spec)(\\/?|\\/.*)$/"
        }
      ],
      "editor/title/context": [
        {
          "command": "bRepoHelper.runTests",
          "group": "10_repo@1",
          "when": "resource =~ /^.*\\/(comp|ecomp|spec)(\\/?|\\/.*)$/"
        }
      ],
      "explorer/context": [
        {
          "command": "bRepoHelper.runTests",
          "group": "6_repo@1",
          "when": "resource =~ /^.*\\/(comp|ecomp|spec)(\\/?|\\/.*)$/"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run lint && npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "publish:major": "node scripts/publish.mjs major && vsce publish major",
    "publish:minor": "node scripts/publish.mjs minor && vsce publish minor",
    "publish:patch": "node scripts/publish.mjs patch && vsce publish patch",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "18.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "5.40.0",
    "@typescript-eslint/parser": "5.40.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "8.25.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0"
  },
  "dependencies": {
    "typescript": "4.8.4"
  }
}
